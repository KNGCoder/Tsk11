<Window x:Class="Tsk11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tsk11"
        mc:Ignorable="d"
        Height="250" Width="400">
    <Window.Resources>
        <local:ToUpperValueConverter x:Key="ToUpperValueConverter" />
    </Window.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
        <TextBlock Text="Введите текст"
                   Width="Auto" Height="Auto"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <TextBox Width="100" Height="20" 
                 x:Name="box"/>
        <TextBlock VerticalAlignment="Center"
                   HorizontalAlignment="Center" 
                   Text="{Binding Path=Name, Converter={StaticResource ToUpperValueConverter}}" />
        </StackPanel>
    </Grid>
</Window>
